{
  "name": "chlu-ipfs-support",
  "version": "0.1.0",
  "description": "Libraries providing IPFS integration for Chlu",
  "main": "src/index.js",
  "scripts": {
    "test": "mocha --opts tests/mocha.opts",
    "test-watch": "mocha --opts tests/mocha.opts --watch",
    "test-coverage": "mocha --opts tests/mocha.opts --coverage",
    "lint": "eslint src tests bin"
  },
  "bin": {
    "chlu-service-node": "bin/chlu-service-node.js"
  },
  "author": "Enrico Fasoli (fazo96)",
  "license": "MIT",
  "dependencies": {
    "ipfs": "~0.27.0",
    "ipfs-pubsub-room": "~1.0.1",
    "orbit-db": "~0.18.0",
    "winston": "^3.0.0-rc1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^4.12.0",
    "mocha": "^4.0.1",
    "sinon": "^4.1.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 8
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "indent": [
        "error",
        4
      ],
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "no-console": 0,
      "no-debugger": 1,
      "no-var": 1,
      "semi": [
        1,
        "always"
      ],
      "no-trailing-spaces": 0,
      "eol-last": 0,
      "no-underscore-dangle": 0,
      "no-alert": 0,
      "no-lone-blocks": 0
    },
    "globals": {}
  }
}
