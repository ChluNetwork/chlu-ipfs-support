{
  "name": "chlu-ipfs-support",
  "version": "0.1.0",
  "description": "Libraries providing IPFS integration for Chlu",
  "main": "lib/index.js",
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.6.0"
  },
  "scripts": {
    "build": "npm run build-node; npm run build-browser",
    "build-browser": "webpack",
    "build-node": "rimraf lib/* && babel src -d lib",
    "test": "npm run test-node && npm run test-browser",
    "test-node": "mocha --opts tests/mocha.opts",
    "test-browser": "karma start --single-run",
    "test-watch": "mocha --opts tests/mocha.opts --watch",
    "test-coverage": "nyc mocha --opts tests/mocha.opts",
    "lint": "eslint src tests bin",
    "prepublish": "npm run build"
  },
  "bin": {
    "chlu-service-node": "bin/chlu-service-node.js"
  },
  "author": "Enrico Fasoli (fazo96)",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "bitcoinjs-lib": "^3.3.2",
    "ipfs": "~0.27.7",
    "ipfs-pubsub-room": "~1.1.5",
    "lodash.clonedeep": "^4.5.0",
    "lodash.isequal": "^4.5.0",
    "orbit-db": "~0.19.4",
    "protons": "~1.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "1.6.1",
    "chai": "^4.1.2",
    "clean-webpack-plugin": "^0.1.17",
    "eslint": "^4.12.0",
    "karma": "^1.7.1",
    "karma-chai": "^0.1.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.6",
    "libp2p-websocket-star-rendezvous": "^0.2.2",
    "mocha": "^4.0.1",
    "nyc": "^11.3.0",
    "sinon": "^4.1.3",
    "uglifyjs-webpack-plugin": "^1.1.4",
    "webpack": "^3.10.0"
  },
  "nyc": {
    "exclude": [
      "bin",
      "tests"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 8
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "indent": [
        "error",
        4
      ],
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "no-console": 0,
      "no-debugger": 1,
      "no-var": 1,
      "semi": [
        1,
        "always"
      ],
      "no-trailing-spaces": 0,
      "eol-last": 0,
      "no-underscore-dangle": 0,
      "no-alert": 0,
      "no-lone-blocks": 0
    },
    "globals": {}
  }
}
